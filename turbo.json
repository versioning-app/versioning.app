{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "#web": {
      "env": ["CLERK_*", "RESEND_*"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "db:migrate": {
      "dependsOn": ["^db:migrate"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  },
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NEXT_PUBLIC_*",
    "STRIPE_*",
    "UPSTASH_*",
    "APP_*",
    "AUTH_*",
    "DATABASE_*",
    "NODE_TLS_REJECT_UNAUTHORIZED"
  ]
}
