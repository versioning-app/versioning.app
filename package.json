{
  "name": "@versioning.app/turbo",
  "private": true,
  "version": "1.0.0",
  "description": "Versioning, made simple",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn turbo build",
    "dev": "yarn turbo dev",
    "lint": "yarn turbo lint",
    "prerelease": "turbo run build lint --filter=\"./packages/*\"",
    "release:publish": "yarn prerelease && changeset publish"
  },
  "packageManager": "yarn@4.3.1",
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "syncpack": "^12.3.3",
    "turbo": "^2.0.6"
  }
}
