{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"outDir": "dist",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react",
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"src",
		"globals.d.ts",
		"../../apps/web/src/lib/type.ts"
	],
	"exclude": [
		"node_modules"
	]
}